# Multi-Provider Configuration Environment Variables
# Copy this file to .env and fill in your actual API keys

# ModelScope (recommended)
MODELSCOPE_API_KEY=ms-your_openai_api_key_here
MODELSCOPE_BASE_URL=https://api-inference.modelscope.cn/v1/

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Azure OpenAI
# Note: Base URL should be your Azure resource endpoint, e.g., https://your-resource.openai.azure.com/
AZURE_API_KEY=your_azure_api_key_here
AZURE_BASE_URL=https://your-resource.openai.azure.com/

# Zhipu AI (GLM)
ZHIPU_API_KEY=glm-your_zhipu_api_key_here
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

# Qwen (Alibaba Cloud DashScope)
QWEN_API_KEY=sk-your_qwen_api_key_here
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# DeepSeek
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Custom Provider
CUSTOM_API_KEY=your_custom_api_key_here
CUSTOM_BASE_URL=https://your-custom-api.com/v1
CUSTOM_TOKEN=your_custom_token_here

# Anthropic API Key for client validation (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8082
LOG_LEVEL=INFO

# Token Limits
MAX_TOKENS_LIMIT=4096
MIN_TOKENS_LIMIT=100

# Connection Settings
REQUEST_TIMEOUT=90
MAX_RETRIES=2

# Custom Headers (optional)
# CUSTOM_HEADER_AUTHORIZATION=Bearer your_token
# CUSTOM_HEADER_X_API_VERSION=v1
